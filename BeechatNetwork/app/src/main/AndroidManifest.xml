<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.beechat.network">
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <application
        android:allowBackup="true"
        android:icon="@drawable/digi_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:requestLegacyExternalStorage="true"
        >
        <activity android:name="com.beechat.network.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.beechat.network.WelcomeScreen"></activity>
        <activity android:name="com.beechat.network.MainScreen"></activity>
        <activity android:name="com.beechat.network.ChatScreen"></activity>
        <activity android:name="com.beechat.network.EditContactScreen"></activity>
        <activity android:name="com.beechat.network.DataScreen"></activity>


    </application>

</manifest>