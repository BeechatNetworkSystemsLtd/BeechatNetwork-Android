<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    tools:context=".WelcomeScreen">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="15dp">
        <TextView
            android:id="@+id/SelectLanguageTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Language" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/languageTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Language" />
            <Spinner
                android:id="@+id/languageSpinner"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:drawSelectorOnTop="true"
                android:prompt="@string/spin"
                android:entries="@array/items_language"
                />
        </LinearLayout>
        <Button
            android:id="@+id/buttonImport"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Import" />
        <TextView
            android:id="@+id/textViewMyID"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:layout_gravity="center_horizontal"
            android:text="My ID \nempty"
            android:lines="2"
            android:gravity="center"
            android:layout_weight="0"
            android:paddingBottom="20dp"
            />
        <EditText
            android:id="@+id/passwordOne"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password" />
        <EditText
            android:id="@+id/passwordTwo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Confirm Password" />
        <TextView
            android:id="@+id/textViewEULA"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scrollbars="horizontal"
            android:isScrollContainer="true"
            android:paddingHorizontal="20dp"
            android:text="@string/eula_text" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center|bottom"
            android:layout_gravity="bottom|center">
            <CheckBox
                android:id="@+id/agreementCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textStyle="italic"
                android:textSize="18dp"
                android:text="@string/eula_agreement"/>
            <Button
                android:id="@+id/finishButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:enabled="false"
                android:text="Finish" />


        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>